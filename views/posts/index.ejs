<% layout('layouts/boilerplate') %>

<h1>All Posts</h1>
<div>
    <a href="/posts/new" class="btn btn-success">Add Post</a>
</div>
<% for (let post of posts){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=post.image%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-username">@<%= post.username %> </h5>
                <p class="card-text"><%= post.description %></p>
                <p class="card-text">❤️ <%= post.total_likes %></p>
                <a class="btn btn-primary" href="/posts/<%=post._id%>">View Post</a>
            </div>
        </div>
    </div>
</div>
<% }%>