<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Post</h1>
    <div class="col-6 offset-3">
        <form action="/posts" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input class="form-control" type="text" id="username" name="post[username]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Add Image</label>
                <input class="form-control" type="text" id="image" name="post[image]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="total_likes">Total Likes</label>
                <input class="form-control" type="number" id="total_likes" name="post[total_likes]" value=0 required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="post[description]" required></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Post</button>
            </div>
        </form>
        <a href="/posts">All Posts</a>
    </div>
</div>