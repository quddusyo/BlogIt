<% layout('layouts/boilerplate') %>
<h1><%= post.username %></h1>
<h2><%= post.title %></h2>
<h2><%= post.description %></h2>
<p>
    <a href="/posts/<%= post._id %>/edit">Edit Post</a>
</p>
<form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
    <button>Delete</button>
</form>
<footer>
    <a href="/posts">All Posts</a>
</footer>